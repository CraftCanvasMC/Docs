---
import { Icon } from "@astrojs/starlight/components";
import type { ComponentProps } from "astro/types";

interface Props {
  icon?: ComponentProps<typeof Icon>["name"];
  src?: string;
  title: string;
  href: string;
  destructive?: boolean;
  color?: "purple" | "blue" | "green" | "red" | "orange";
}

const { icon, src, title, href, destructive, color } = Astro.props;
---

<a
  href={href}
  class:list={["not-content", "card", destructive && "card-destructive", color && `card-${color}`]}
>
  <article class="sl-flex">
    <div class="title sl-flex">
        {icon && <Icon name={icon} class="icon" size="1.333em" />}
        {src && <img src={src} alt="Icon" class="icon" />}
      <span set:html={title} />
      {destructive && <Icon name="warning" class="warning-icon" />}
    </div>
    <div class="body"><slot /></div>
  </article>
</a>

<style>
.card {
  border: 1px solid var(--sl-card-border, var(--sl-color-gray-5));
  background-color: var(--sl-card-bg, var(--sl-color-black));
  padding: clamp(1rem, calc(0.125rem + 3vw), 2.5rem);
  border-radius: 0.25rem;
  text-decoration: none;
  transition:
    border-color 0.3s ease,
    background-color 0.3s ease,
    box-shadow 0.3s ease;
}

.card article {
  flex-direction: column;
  gap: calc(clamp(0.5rem, calc(0.125rem + 1vw), 1rem) / 2);
}

.card:hover {
  border-color: var(--sl-card-border);
  background-color: var(--sl-card-bg);
  box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.title {
  font-weight: 600;
  font-size: var(--sl-text-h4);
  line-height: var(--sl-line-height-headings);
  gap: 1rem;
  align-items: center;
  color: var(--sl-color-white);
}

.card .icon {
  width: 1.333em; /* match original SVG size */
  height: 1.333em;
  object-fit: contain;
  border: 1px solid var(--sl-card-border);
  background-color: var(--sl-card-bg);
  padding: 0.2em;
  border-radius: 0.25rem;
}

.card .body {
  margin-top: 0.5rem;
  font-size: clamp(var(--sl-text-sm), calc(0.5rem + 1vw), var(--sl-text-body));
  color: var(--sl-color-gray-3);
  transition: color 0.3s ease;
}

.card:hover .body {
  color: var(--sl-color-gray-1);
}

.card-destructive .warning-icon {
  color: var(--sl-color-red);
}

.card-purple { --sl-card-border: var(--sl-color-purple); --sl-card-bg: var(--sl-color-purple-low); }
.card-blue   { --sl-card-border: var(--sl-color-blue);   --sl-card-bg: var(--sl-color-blue-low); }
.card-green  { --sl-card-border: var(--sl-color-green);  --sl-card-bg: var(--sl-color-green-low); }
.card-red    { --sl-card-border: var(--sl-color-red);    --sl-card-bg: var(--sl-color-red-low); }
.card-orange { --sl-card-border: var(--sl-color-orange); --sl-card-bg: var(--sl-color-orange-low); }
</style>
