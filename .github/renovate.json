{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    }
  ],
  "dependencyDashboard": false,
  "postUpgradeTasks": {
    "commands": ["bun format"],
    "fileFilters": ["**/*.{js,ts,json,md}"]
  }
}
